Algoritmo Ejercicio_11
	
	Definir Dia, Hora, Min, Seg Como Real;
	
	Escribir "Digite la cantidad de Dias que entra en la semana"
	Leer Dia;
	
	Hora = Dia * 24;
	
	Min = Hora * 60;
	
	Seg = Min * 60;
	
	Escribir "Segun los dias ingresados, seran: ";
	
	Escribir Hora, " Horas";
	Escribir Min, " Minutos";
	Escribir Seg, " Segundos";
	
FinAlgoritmo
